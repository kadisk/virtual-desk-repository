{
    "params" : [
        "port", 
        "serverName",
        "secretKey"
    ],
    "services": [
        {
            "namespace": "@@/server-service",
            "dependency": "@/server-manager.service/services/HTTPServerService",
            "params":{
                "name":"{{serverName}}",
                "port": "{{port}}"
            },
            "bound-params":{
                "middlewareService": "@@/jwt-verifier-middleware-service"
            }
        },
        {
            "namespace": "@@/jwt-verifier-middleware-service",
            "dependency": "@/server-manager.service/services/JWTVerifierMiddlewareService",
            "params":{
                "secretKey":"{{secretKey}}"
            }
        }
    ],
    "endpoints": [
        {
            "dependency": "@/server-manager.webservice/endpoint-group",
            "bound-params":{
               "serverServiceForController":"@@/server-service",
               "serverService": "@@/server-service"
            }
        },
        {
            "dependency": "@/authenticator.webservice/endpoint-group",
            "params":{
                "needsAuth": true
            },
            "bound-params":{
                "serverService": "@@/server-service",
                "userManagementService": "@@/user-management-service"
            }
        },
        {
            "dependency": "@/user-space.webservice/endpoint-group",
            "params":{
                "needsAuth": true
            },
            "bound-params":{
                "serverService": "@@/server-service"
            }
        }
    ]
}